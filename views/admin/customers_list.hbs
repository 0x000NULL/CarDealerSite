<body style="margin: 2% 2%;">

    <table>
        <tr>
            <td>
                <h3>Customers requesting Agent contact</h3>
            </td>
            <td style="margin: 10px; padding-left:650px;"></td>
            <td>
                {{!-- <a class="btn btn-dark" href="addelectric">Add Electric</a>&nbsp;&nbsp;&nbsp; --}}
                <a class="btn btn-dark" href="/admin/admin_index">Admin</a>
            </td>
        </tr>
    </table>


    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>E-mail</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody>
            {{#each list}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.email}}</td>
                <td>{{this.phone}}</td>
                <td>
                    <a class="btn btn-outline-danger btn-sm" href="deletecustomer/{{this._id}}"
                        onclick="return confirm('Are you sure to delete this record ?');">Delete</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>




